/*
Module: relabelings-kubelet-resources
Description: Handles metric relabelings for collected metrics from kubelet-resources
*/
argument "forward_to" {
  optional = false
  // comment = "The module to forward the output to"
}

argument "job_label" {
  optional = true
  // from Grafana Cloud Integration:
  default = "integrations/kubernetes/resources"
  // comment = "The job label to add for all cadvisor metrics"
}

export "metric_relabelings" {
  value = prometheus.relabel.kubelet_resources
}

prometheus.relabel "kubelet_resources" {
  forward_to = argument.forward_to.value

  // set the job label
  rule {
    action = "replace"
    replacement = argument.job_label.value
    target_label = "job"
  }

}
